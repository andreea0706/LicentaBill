@model IEnumerable<Invoice.Core.Entity.NirModel>
@{
    ViewData["Title"] = "Lista Nota Intrare Receptie";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Lista Nota Intrare Receptie</h5>
                        <div class="table-responsive m-t-10">
                            <table id="example23" class="display nowrap table table-hover  table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr style="text-align:center;">
                                        <th>Serie Document</th>
                                        <th>Data</th>
                                        <th>Total</th>
                                        <th>Reducere</th>
                                        <th>Total Vanzare</th>
                                        <th style="text-align:center;">Optiuni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="text-align:center;">@item.NirCode</td>
                                            <td style="text-align:center;">@item.NirDate.ToString("dd/MM/yyyy")</td>
                                            <td style="text-align:center;">@item.Total RON</td>
                                            <td style="text-align:center;">@item.Discount</td>
                                            <td style="text-align:center;">@item.GrandTotal RON</td>
                                            <td style="text-align:center;">
                                                <a href="@Url.Action("NirDoc","Sales", new {nirId = item.Id,style=1})" title="Model Factura 1" style="padding:10px;">
                                                    <i class="fa fa-file" style="font-size:18px;"></i>
                                                </a>

                                                <a href="@Url.Action("EditNir", "Sales", new {nirId= item.Id})" title="Editeaza" style="padding:10px;">
                                                    <i class="fa fa-edit" style="font-size:18px;"></i>
                                                </a>
                                                <a href="@Url.Action("DeleteNir", "Sales", new {nirId = item.Id})" title="Sterge" style="padding-left:10px;" onclick="return confirm('Sigur doresti sa stergi aceasta factura?')">
                                                    <i class="fa fa-trash" style="font-size:18px;"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
