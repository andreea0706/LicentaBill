@model Invoice.Core.ViewModel.InfoAnafViewModel
@{
    ViewData["Title"] = "Autentificare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /> <br /><br /><br /><br /><br /><br />
<div class="container"  style="height: 540px;">
    <div class="text-center ">
        <h2>Te rugam sa introduci Codul de Identificare Fiscala</h2>
        <br/>
        <form asp-action="ReturnInfoAnaf" asp-controller="Home" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <div class="text-center">
                <input asp-for="cui" class="form-control" required style="display: inline-block; width:450px;"/>
            </div>
                <span asp-validation-for="cui" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Autentificare" class="btn btn-default btn-info" />
            </div>
        </form>
    </div>
 

    <br /><br /><br /><br /><br /><br /><br />
</div>
