@model Invoice.Core.Entity.ProductModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-title">
                        <h3>Produs Nou</h3>
                    </div>
                    <br/>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="Addproduct" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="Code"></label>
                                            <div>
                                                <input asp-for="Code" type="text" class="form-control" required style="display: inline-block; width:250px; border-width:thin; border-bottom-color:black;" />
                                            </div>
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <div>
                                                <input asp-for="Name" type="text" class="form-control" required style="display: inline-block; width:250px; border-width:thin; border-bottom-color:black;" />
                                            </div>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success"> Save Changes </button>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="Price"></label>
                                            <div>
                                                <input asp-for="Price" type="text" class="form-control" required style="display: inline-block; width:250px; border-width:thin; border-bottom-color:black;" />
                                            </div>
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description"></label>
                                            <div>
                                                <input asp-for="Description" type="text" class="form-control" required style="display: inline-block; width:250px; border-width:thin; border-bottom-color:black;" />
                                            </div>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>

