@model Invoice.Core.Entity.ProductModel
@{
    ViewData["Title"] = "Editare Produs";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Actualizare date produs</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="EditProduct" method="post">
                                <input asp-for="Id" type="hidden"/>
                                <div class="row">
                                    <div class="col-lg-8">

                                        <div class="form-group">
                                            <label asp-for="Code"></label>
                                            <input type="text" asp-for="Code" class="form-control" placeholder="Adauga Cod Produs">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <input type="text" asp-for="Name" class="form-control" placeholder="Adauga Nume Produs">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Stoc"></label>
                                            <input asp-for="Stoc" class="form-control" type="number" placeholder="Adauga Descriere Produs">
                                            <span asp-validation-for="Stoc" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Price"></label>
                                            <input asp-for="Price" class="form-control" type="text" placeholder="Adauga Pret Produs">
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description"></label>
                                            <input asp-for="Description" class="form-control" type="text" placeholder="Adauga Descriere">
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success"> Salveaza </button>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>

